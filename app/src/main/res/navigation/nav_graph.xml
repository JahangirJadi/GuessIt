<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.marfarijj.guessit.Fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_nav_to_home"
            app:destination="@+id/startScreenFragment"

            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />


    </fragment>
    <fragment
        android:id="@+id/startScreenFragment"
        android:name="com.marfarijj.guessit.Fragments.StartScreenFragment"
        android:label="fragment_start_screen"
        tools:layout="@layout/fragment_start_screen" >

        <action
            android:id="@+id/action_nav_to_guess"
            app:destination="@+id/guessFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right"
            app:popUpTo="@+id/guessFragment"
            app:popUpToInclusive="true">


        </action>

        <action
            android:id="@+id/action_nav_to_htp"
            app:destination="@+id/guideFragment"

            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right"
            app:popUpTo="@+id/guessFragment"
            app:popUpToInclusive="true">


        </action>




    </fragment>
    <fragment
        android:id="@+id/populateDataFragment"
        android:name="com.marfarijj.guessit.Fragments.PopulateDataFragment"
        android:label="PopulateDataFragment" />
    <fragment
        android:id="@+id/guessFragment"
        android:name="com.marfarijj.guessit.Fragments.GuessFragment"
        android:label="GuessFragment">
        <action
            android:id="@+id/action_nav_to_result"
            app:destination="@+id/resultFragment"

            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right"
            app:popUpTo="@+id/guessFragment"
            app:popUpToInclusive="true">


        </action>

    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.marfarijj.guessit.Fragments.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result">
        <action
            android:id="@+id/action_nav_from_result_to_guess"
            app:destination="@+id/guessFragment"

            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right"
            app:popUpTo="@+id/resultFragment"
            app:popUpToInclusive="true"
            ></action>


        <argument
            android:name="winner"
            app:argType="string"
android:defaultValue="TIE"
            />

    </fragment>
    <fragment
        android:id="@+id/guideFragment"
        android:name="com.marfarijj.guessit.Fragments.GuideFragment"
        android:label="GuideFragment" />
</navigation>